{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": ".",
    "outDir": "dist",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "strict": true
  }
}
